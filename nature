import time

def introduction():
    print("Добро пожаловать в текстовую игру!")
    print("Вы просыпаетесь в темной комнате. Перед вами две двери.")

def make_choice():
    print("Выберите действие:")
    print("1. Войти в левую дверь.")
    print("2. Войти в правую дверь.")
    choice = input("Введите номер вашего выбора: ")
    return choice

def left_door():
    print("Вы вошли в левую дверь и оказались в саду с яркими цветами.")
    print("Вы наслаждаетесь природой.")

def right_door():
    print("Вы вошли в правую дверь и попали в темное подземелье.")
    print("Вы слышите странные звуки вокруг себя.")

def main():
    introduction()

    while True:
        choice = make_choice()
